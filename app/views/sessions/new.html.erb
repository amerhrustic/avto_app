<h1 class="text-2xl font-bold">Register</h1>

<%= form_with model: @user, url: @user.new_record? ? users_path : login_path, local: true do |form| %>
  <div>
    <%= form.label :name, class: "block" %> <!-- Add Name label -->
    <%= form.text_field :name, class: "p-3 border rounded w-full" %> <!-- Add Name input field -->
  </div>

  <div>
    <%= form.label :email, class: "block" %>
    <%= form.email_field :email, class: "p-3 border rounded w-full" %>
  </div>

  <div>
    <%= form.label :password, class: "block" %>
    <%= form.password_field :password, class: "p-3 border rounded w-full" %>
  </div>

  <% if @user.new_record? %>
    <div>
      <%= form.label :password_confirmation, class: "block" %>
      <%= form.password_field :password_confirmation, class: "p-3 border rounded w-full" %>
    </div>
  <% end %>

  <div>
    <%= form.submit @user.new_record? ? "Register" : "Login", class: "p-3 bg-blue-500 text-white rounded" %>
  </div>
<% end %>
